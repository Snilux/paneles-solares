<header id="hero"
    class="relative min-h-screen bg-gradient-to-br from-slate-900 via-green-950 to-slate-800 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5"
        style="background-image: radial-gradient(circle, white 2px, transparent 1px); background-size: 20px 20px;">
    </div>
    <!-- Navigation -->
    <nav id="navbar" class="fixed top-0 left-0 w-full z-50 transition-all duration-300">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <!-- Logo -->
                <div class="flex-shrink-0">
                    <!-- Changed text-blue-400 to text-green-400 -->
                    <h1 class="text-xl sm:text-2xl font-bold text-gray-300 cursor-pointer"
                        onclick="scrollToSection('hero')">
                        Ahorra con Paneles Solares
                    </h1>
                </div>

                <!-- Desktop Navigation -->
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-8">
                        <!-- Changed hover:text-blue-400 and bg-blue-400 to green variants -->
                        <button onclick="scrollToSection('hero')"
                            class="nav-link text-gray-300 hover:text-green-400 px-3 py-2 text-sm font-medium transition-colors duration-200 relative group">
                            Inicio
                            <span
                                class="absolute bottom-0 left-0 w-0 h-0.5 bg-green-400 transition-all duration-300 group-hover:w-full"></span>
                        </button>
                        <button onclick="scrollToSection('nosotros')"
                            class="nav-link text-gray-300 hover:text-green-400 px-3 py-2 text-sm font-medium transition-colors duration-200 relative group">
                            ¿Quiénes somos?
                            <span
                                class="absolute bottom-0 left-0 w-0 h-0.5 bg-green-400 transition-all duration-300 group-hover:w-full"></span>
                        </button>
                        <button onclick="scrollToSection('productos')"
                            class="nav-link text-gray-300 hover:text-green-400 px-3 py-2 text-sm font-medium transition-colors duration-200 relative group">
                            Productos
                            <span
                                class="absolute bottom-0 left-0 w-0 h-0.5 bg-green-400 transition-all duration-300 group-hover:w-full"></span>
                        </button>
                        <button onclick="scrollToSection('consejos')"
                            class="nav-link text-gray-300 hover:text-green-400 px-3 py-2 text-sm font-medium transition-colors duration-200 relative group">
                            Consejos
                            <span
                                class="absolute bottom-0 left-0 w-0 h-0.5 bg-green-400 transition-all duration-300 group-hover:w-full"></span>
                        </button>
                        <button onclick="scrollToSection('beneficios')"
                            class="nav-link text-gray-300 hover:text-green-400 px-3 py-2 text-sm font-medium transition-colors duration-200 relative group">
                            Beneficios
                            <span
                                class="absolute bottom-0 left-0 w-0 h-0.5 bg-green-400 transition-all duration-300 group-hover:w-full"></span>
                        </button>
                        <button onclick="scrollToSection('contacto')"
                            class="nav-link text-gray-300 hover:text-green-400 px-3 py-2 text-sm font-medium transition-colors duration-200 relative group">
                            Contacto
                            <span
                                class="absolute bottom-0 left-0 w-0 h-0.5 bg-green-400 transition-all duration-300 group-hover:w-full"></span>
                        </button>
                        <!-- Changed gradient from blue/cyan to green variants -->
                        <a href="/cotizador"
                            class="bg-gradient-to-r from-green-500 to-emerald-500 hover:from-green-600 hover:to-emerald-600 text-white px-4 py-2 rounded-full text-sm font-medium transition-all duration-300 transform hover:scale-105 flex items-center gap-2">
                            <i data-lucide="calculator" class="w-4 h-4"></i>
                            Cotizador
                        </a>
                    </div>
                </div>

                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <!-- Changed hover:text-blue-400 to hover:text-green-400 -->
                    <button id="mobile-menu-btn" class="text-gray-300 hover:text-green-400 p-2">
                        <i data-lucide="menu" class="w-6 h-6"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="md:hidden bg-slate-900/95 backdrop-blur-md hidden">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <!-- Changed all hover:text-blue-400 to hover:text-green-400 in mobile nav -->
                <button onclick="scrollToSection('hero')"
                    class="mobile-nav-link text-gray-300 hover:text-green-400 block px-3 py-2 text-base font-medium w-full text-left transition-colors duration-200">
                    Inicio
                </button>
                <button onclick="scrollToSection('nosotros')"
                    class="mobile-nav-link text-gray-300 hover:text-green-400 block px-3 py-2 text-base font-medium w-full text-left transition-colors duration-200">
                    ¿Quiénes somos?
                </button>
                <button onclick="scrollToSection('productos')"
                    class="mobile-nav-link text-gray-300 hover:text-green-400 block px-3 py-2 text-base font-medium w-full text-left transition-colors duration-200">
                    Productos
                </button>
                <button onclick="scrollToSection('consejos')"
                    class="mobile-nav-link text-gray-300 hover:text-green-400 block px-3 py-2 text-base font-medium w-full text-left transition-colors duration-200">
                    Consejos
                </button>
                <button onclick="scrollToSection('beneficios')"
                    class="mobile-nav-link text-gray-300 hover:text-green-400 block px-3 py-2 text-base font-medium w-full text-left transition-colors duration-200">
                    Beneficios
                </button>
                <button onclick="scrollToSection('contacto')"
                    class="mobile-nav-link text-gray-300 hover:text-green-400 block px-3 py-2 text-base font-medium w-full text-left transition-colors duration-200">
                    Contacto
                </button>
                <!-- Changed mobile button gradient to green variants -->
                <a href="/cotizador"
                    class="bg-gradient-to-r from-green-500 to-emerald-500 hover:from-green-600 hover:to-emerald-600 text-white px-3 py-2 rounded-full text-base font-medium transition-all duration-300 flex items-center gap-2 mx-3 mt-4">
                    <i data-lucide="calculator" class="w-4 h-4"></i>
                    Cotizador
                </a>
            </div>
        </div>
    </nav>

    <!-- Hero Content -->
    <div class="relative z-10 flex items-center justify-center min-h-screen px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-4xl mx-auto">
            <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
                Iluminamos tu futuro con
                <!-- Changed gradient text from blue/cyan to green/emerald -->
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-emerald-400">
                    energía solar
                </span>
            </h2>
            <p class="text-xl sm:text-2xl text-gray-300 mb-8 max-w-2xl mx-auto leading-relaxed">
                Instalación y mantenimiento de paneles solares con tecnología de punta.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <!-- <button onclick="scrollToSection('productos')"
                    class="bg-gradient-to-r from-green-500 to-emerald-500 hover:from-green-600 hover:to-emerald-600 text-white font-semibold py-4 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105 hover:shadow-xl shadow-green-500/25">
                    Descubre más
                </button> -->
                <!-- Changed border and text colors from blue to green -->
                <a href="/cotizador"
                    class="bg-transparent border-2 border-green-400 text-green-400 hover:bg-green-400 hover:text-white font-semibold py-4 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105 flex items-center gap-2">
                    <i data-lucide="calculator" class="w-5 h-5"></i>
                    Cotiza tu proyecto
                </a>
            </div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce-slow">
        <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center">
            <div class="w-1 h-3 bg-white/60 rounded-full mt-2 animate-pulse-slow"></div>
        </div>
    </div>
</header>